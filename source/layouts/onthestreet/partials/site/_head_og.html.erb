<meta property="og:site_name" content="<%= site_title %>"/>
<meta property="og:title" content="<%= meta_title %>" />
<meta property="og:url" content="<%= meta_url %>" />
<meta property="og:description" content="<%= meta_description %>" />
<%- if meta_image_url -%>
  <meta property="og:image" content="<%=meta_image_url%>" />
<%- end -%>

<meta name="twitter:card" value="summary" />
<meta name="twitter:site" value="@dancow" />
<meta content="<%= meta_url %>" property="twitter:url"/>
<meta property="twitter:title" content="<%= truncate(meta_title, length: 70) %>" />
<meta property="twitter:description" content="<%= truncate(meta_description, length: 200) %>" />
<meta property="twitter:image" content="<%= meta_image_url %>" />
