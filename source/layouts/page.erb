<% wrap_layout :default do %>

    <div class="boilerplate">
      <h1><%= page_title %></h1>
    </div>

    <%= yield %>

    <div class="references">
      <% current_page.data.references.each do |r| %>
        <div class="reference">
          <%= link_to_resource(r) %>
        </div>
      <% end %>
    </div>
<% end %>
