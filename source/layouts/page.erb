<% wrap_layout :default do %>

    <div class="page-header">
      <div class="crumb">
        <%=yield_content :crumb %>
      </div>
      <h1 class="title"><%= page_title %></h1>
      <div class="description">
        <%= page_description  %>
      </div>
    </div>


    <div class="page-content">
      <%= yield %>
    </div>


    <% if current_page.data.references %>
      <section id="references" class="references card">
        <div class="card-block">

            <h1>References</h1>
            <% current_page.data.references.each do |r| %>
              <%= render_content_resource_element(r, :class => 'reference') %>
            <% end %>

        </div>
      </section>
    <% end %>

<% end %>
